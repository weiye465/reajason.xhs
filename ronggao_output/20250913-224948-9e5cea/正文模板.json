{
  "图片基础设置": {
    "尺寸": {
      "宽度": 1080,
      "高度": 1440,
      "比例": "3:4（小红书标准）"
    },
    "背景": {
      "颜色": "#FFFFFF",
      "类型": "纯色"
    },
    "边距": {
      "上": 60,
      "下": 60,
      "左": 50,
      "右": 50
    }
  },

  "顶部标题栏": {
    "样式": {
      "背景色": "#FFD700",
      "高度": 100,
      "宽度": "100%",
      "对齐": "居中",
      "边距": {
        "上": 0,
        "下": 30
      }
    },
    "文字": {
      "字体": "思源黑体 Bold / 苹方黑体-粗体",
      "字号": 48,
      "颜色": "#000000",
      "字重": 700,
      "行高": 100
    }
  },

  "副标题": {
    "样式": {
      "对齐": "左对齐",
      "边距": {
        "上": 10,
        "下": 40,
        "左": 0
      }
    },
    "文字": {
      "字体": "思源黑体 Regular",
      "字号": 36,
      "颜色": "#333333",
      "字重": 400
    }
  },

  "问题块": {
    "编号": {
      "字体": "思源黑体 Bold",
      "字号": 42,
      "颜色": "#FF0000",
      "字重": 700,
      "格式": "数字.（如：1.）"
    },
    "标题": {
      "字体": "思源黑体 Bold",
      "字号": 42,
      "颜色": "#FF0000",
      "字重": 700,
      "边距": {
        "左": 5,
        "下": 15
      }
    },
    "正文": {
      "字体": "思源黑体 Regular",
      "字号": 36,
      "颜色": "#000000",
      "字重": 400,
      "行高": 1.6,
      "边距": {
        "上": 0,
        "下": 35,
        "左": 0
      }
    },
    "间距": {
      "问题之间": 45,
      "标题与正文": 15
    }
  },

  "特殊标记": {
    "重点词汇": {
      "样式": "加粗",
      "字重": 600,
      "颜色": "#000000"
    },
    "数字强调": {
      "样式": "正常",
      "颜色": "#FF0000"
    },
    "引号内容": {
      "符号": """",
      "颜色": "#000000"
    },
    "警示词": {
      "如": ["pass", "快逃", "慎重", "警惕"],
      "样式": "保持原色",
      "字重": 500
    }
  },

  "排版规则": {
    "对齐方式": "左对齐",
    "段落间距": 35,
    "行间距": "1.6倍行高",
    "每页问题数": "7-8个",
    "文字密度": "紧凑型",
    "断句方式": "标点符号自然断句"
  },

  "颜色方案": {
    "主色调": {
      "黄色": "#FFD700",
      "红色": "#FF0000",
      "黑色": "#000000",
      "深灰": "#333333"
    },
    "用途": {
      "标题背景": "#FFD700",
      "问题编号": "#FF0000",
      "问题标题": "#FF0000",
      "正文": "#000000",
      "副标题": "#333333"
    }
  },

  "字号层级": {
    "一级标题": 48,
    "二级标题（副标）": 36,
    "问题标题": 42,
    "正文": 36,
    "注释": 32
  },

  "内容结构": {
    "布局": "垂直列表式",
    "层次": [
      "顶部黄色标题栏",
      "副标题说明",
      "问题1（编号+标题+正文）",
      "问题2（编号+标题+正文）",
      "问题3（编号+标题+正文）",
      "...继续至填满页面"
    ],
    "视觉权重": {
      "标题栏": "15%",
      "问题标题": "30%",
      "正文内容": "55%"
    }
  },

  "制作建议": {
    "软件": "Figma / Canva / 创客贴",
    "字体备选": [
      "思源黑体",
      "苹方黑体",
      "微软雅黑",
      "阿里巴巴普惠体"
    ],
    "导出": {
      "格式": "PNG / JPG",
      "分辨率": "72-150 DPI",
      "色彩模式": "RGB"
    },
    "注意事项": [
      "保持问题编号对齐",
      "红色不要过于刺眼",
      "正文保持良好可读性",
      "避免文字过于拥挤"
    ]
  }
}